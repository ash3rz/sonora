{
  "name": "sonora",
  "version": "0.0.1",
  "description": "The UI for the CyVerse Discovery Environment.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "next build && babel ./server ./common --out-dir dist",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "storybook": "start-storybook -p 9009 -s public",
    "test": "jest",
    "test-watch": "jest --watch",
    "format": "prettier --write './**/*.js'",
    "clean": "rimraf ./.next ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cyverse-de/sonora.git"
  },
  "author": "CyVerse Core Software",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/cyverse-de/sonora/issues"
  },
  "homepage": "https://github.com/cyverse-de/sonora#readme",
  "nodemonConfig": {
    "watch": [
      "server",
      "common",
      "pages"
    ],
    "ext": "js",
    "exec": "babel-node ./server/"
  },
  "dependencies": {
    "@cyverse-de/ui-lib": "^0.3.17",
    "@material-ui/core": "^4.8.3",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.39",
    "apollo-boost": "^0.4.7",
    "apollo-datasource-rest": "^0.6.11",
    "apollo-server-express": "^2.9.15",
    "express": "^4.17.1",
    "formik": "^1.5.8",
    "graphql": "^14.5.8",
    "graphql-middleware": "^4.0.2",
    "graphql-tools": "^4.0.6",
    "graphql-type-json": "^0.3.1",
    "next": "^9.1.7",
    "node-fetch": "^2.6.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-intl": "^2.9.0",
    "react-select": "^2.4.4"
  },
  "optionalDependencies": {
    "fsevents": "^1.2.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-console": "^1.2.1",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-preset-react-app": "^9.1.0",
    "cross-env": "^6.0.3",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "bracketSpacing": true,
    "arrowParens": "always",
    "jsxBracketSameLine": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
